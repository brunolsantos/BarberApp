  <div class="row">
    {{# each barbers}} 
    <div class="col-sm-6 col-md-4 text-center">
      <div class="thumbnail">
        <img src="{{this.photo}}" height="200" width="100">
        <a  href="" data-toggle="modal" data-target="#editBarber" data-id="{{this.id}}" 
          data-name="{{this.name}}" data-photo="{{this.photo}}" class="editBarber"><p>editar</p></a>
        <div class="caption">
          <h3>{{this.name}}</h3>
          <form action="/barbers/{{this.id}}/queue" method="get">
            <button type="submit" class="btn btn-default" data-dismiss="modal">Fila</button>
          </form>
          <form action="/barbers/{{this.id}}" method="get">
            <button type="submit" class="btn btn-info" data-dismiss="modal">Informações do barbeiro</button>
          </form>
          <form action="/barbers/{{this.id}}/insert" method="post" style="margin-top:20px;">
            <div class="form-group">
              <label>Inserir na fila (NOME):</label>
              <input type="text" class="form-control" name="name" size="2">
              <button type="submit" class="btn btn-danger" data-dismiss="modal">Inserir na fila</button>
            </div>
          </form>
          <a class="btn btn-warning" href="/barbers/remove-barber/{{this.id}}">Deletar</a>
        </div>
      </div>
    </div>
    {{/each }}
  </div>





  

